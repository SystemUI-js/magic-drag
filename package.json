{
  "name": "magic-drag",
  "version": "0.1.0",
  "private": true,
  "description": "Cross-tab drag and drop library for browser - enables dragging elements between browser tabs using BroadcastChannel API",
  "license": "MIT",
  "packageManager": "yarn@1.22.22",
  "type": "module",
  "main": "./dist/magic-drag/index.js",
  "module": "./dist/magic-drag/index.js",
  "types": "./dist/magic-drag/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/magic-drag/index.js",
      "types": "./dist/magic-drag/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "tsc --project tsconfig.build.json",
    "build:all": "yarn build && yarn build:lib",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^17.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^24.1.3",
    "prettier": "^3.3.3",
    "prettier-config-standard": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^5.4.9"
  },
  "dependencies": {
    "@system-ui-js/development-base": "^0.1.2",
    "@system-ui-js/multi-drag": "^0.2.6"
  },
  "keywords": [
    "drag",
    "drop",
    "cross-tab",
    "broadcast-channel",
    "multi-tab",
    "drag-and-drop",
    "typescript"
  ]
}
